<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/favouriteListFragment">

    <fragment
        android:id="@+id/NearbyPlacesFragment"
        android:name="io.radev.catchit.fragment.NearbyPlacesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/ConnectionsListFragment" />
        <action
            android:id="@+id/action_NearbyPlacesFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
    </fragment>
    <fragment
        android:id="@+id/ConnectionsListFragment"
        android:name="io.radev.catchit.fragment.ConnectionsListFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_ConnectionsListFragment_to_NearbyPlacesFragment"
            app:destination="@id/NearbyPlacesFragment" />
        <action
            android:id="@+id/action_ConnectionsListFragment_to_departuresMap"
            app:destination="@id/departuresMap" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="io.radev.catchit.fragment.LocationFragment"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location" >
        <action
            android:id="@+id/action_locationFragment_to_departuresMap"
            app:destination="@id/departuresMap" />
    </fragment>
    <fragment
        android:id="@+id/favouriteListFragment"
        android:name="io.radev.catchit.fragment.FavouriteListFragment"
        android:label="fragment_favourite_list"
        tools:layout="@layout/fragment_favourite_list" />
    <fragment
        android:id="@+id/departuresMap"
        android:name="io.radev.catchit.DeparturesMap"
        android:label="fragment_departures_map"
        tools:layout="@layout/fragment_departures_map" >
        <action
            android:id="@+id/action_departuresMap_to_locationFragment"
            app:destination="@id/locationFragment" />
        <action
            android:id="@+id/action_departuresMap_to_ConnectionsListFragment"
            app:destination="@id/ConnectionsListFragment" />
    </fragment>
</navigation>
